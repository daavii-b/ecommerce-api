    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "autoReload": {"enable": true, "exclude": [
                "**/.git/**",
                "**/.metadata/**",
                "**/__pycache__/**",
                "**/node_modules/**",
                "**/site-packages/**"
            ], "include": [
                "**/*.py",
                "**/*.pyw"
            ]},
            "env": {},
            "console": "externalTerminal",
            "internalConsoleOptions": "neverOpen",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "192.168.0.20:8000"
            ],
            "django": true,
            "justMyCode": true
        }
    ]
}
